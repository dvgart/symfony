{% extends 'base.html.twig'%}
{% block title %}Symfart Articles{% endblock %}

{% block body %}
    
    {% if articles %}
       <table class="table table-striped">
       	    <thead>
       	    	<tr>
       	    		<th>Article title</th>
       	   	        <th>Action</th>
       	    	</tr>
       	    </thead>
       	    <tbody>
       	    	{%for article in articles%}
       	    	<tr>
       	    		<td>
       	    			{{article}}
       	    		    <a href="/article/1" class="btn btn-dark">Show</a>
       	    	    </td>
       	    	</tr>
       	    	{% endfor %}
       	    </tbody>
       </table>
    {% else %}
       <p>No articles to display</p>
    {% endif %}
{% endblock %}